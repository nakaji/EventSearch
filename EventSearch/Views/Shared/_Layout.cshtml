@using EventSearch.Models
<!DOCTYPE html>
<html lang="ja">
    <head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - マイ ASP.NET MVC アプリケーション</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        <link href="~/Content/themes/base/bootstrap-theme.min.css" rel="stylesheet" />
        <link href="~/Content/themes/base/bootstrap.min.css" rel="stylesheet" />
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink("イベント検索", "Index", "Home")</p>
                </div>
                <div class="float-right">
                    @if (Session["access_token"] == null)
                    {
                        <p>@Html.ActionLink("ログイン", "Login", "Home")</p>
                    }
                    else
                    {
                        var userInfo = (UserInfo)Session["user_info"];
                        <p>
                            @userInfo.GivenName さん
                            <img src="@userInfo.Picture" width="32" height="32" />
                            @Html.ActionLink("ログアウト", "Logout", "Home")
                        </p>

                    }
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - イベント検索</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
